<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tn.esprit.touristick">

    <application
        android:name=".TouristickApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TourisTick"
        tools:targetApi="31">
        <activity
            android:name=".views.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".views.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".views.ReservationManagementActivity"
            android:exported="true" />
        <activity
            android:name=".views.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".views.AddReservationActivity"
            android:exported="true" />
        <activity
            android:name=".views.DeleteReservationActivity"
            android:exported="true" />
        <activity
            android:name=".views.UpdateReservationActivity"
            android:exported="true" />
        <activity
            android:name=".views.ListReservationsActivity"
            android:exported="true" />
        <activity
            android:name=".views.ProfileActivity"
            android:exported="true" />
        <activity
            android:name=".views.ChatbotActivity"
            android:exported="true" />
        <activity
            android:name=".views.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>